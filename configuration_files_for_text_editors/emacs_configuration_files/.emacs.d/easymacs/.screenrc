term xterm

## Make the output buffer large for (fast) xterms.
termcapinfo xterm* OL=10000

defscrollback         5000            # default: 100

# Make xterm srollbar work
termcapinfo xterm ti@:te@

# Get rid of trailing spaces
defbce on

vbell off

# dynamic titles -- requires:
# export PROMPT_COMMAND='echo -n -e "\033k\033\134"'
shelltitle "$ |"

bindkey ^[O3D prev
bindkey ^[O3C next

bindkey ^[[1;3D prev
bindkey ^[[1;3C next


bind r screen -t 'root' su

#### Allows setting of xterm title bar; seems incompatible with
#### hardstatus alwayslastline, so we use caption always instead
termcapinfo xterm 'hs:ts=\E]2;:fs=\007:ds=\E]2;screen\007'
hardstatus on
## use this for the hard status string to use in xterm title bar only
hardstatus string "(%n.%t)"

# time helps tcp timeouts
caption always "%{=}%{+b kG}%H %{+b kR}%0c %{+b kB}%?%-Lw%?%{+b kW}%n*%f %t%?(%u)%?%{+b kB}%?%+Lw%?"

